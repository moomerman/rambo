<html>
<head>
    <title><%= @title ? @title + ' | ' : '' %>Rambo/MongoDB Blog</title>
    <link rel="stylesheet" href="/css/main.css" type="text/css"/>
    <script type="text/javascript" src="/js/jquery-1.3.2.min.js"></script>
</head>

<body>
    
    <div class="navbar">
        <div style="float:left; margin-left:10px">
            <a href="/">Rambo/MongoDB Blog</a>
            <% if @post %>
                / <%= @post.title %>
            <% end %>
        </div>
        
        <div style="float:right; margin-right:10px">
            <% if session[:user] %>
                <%= session[:user].screen_name %> <a href="/twitter/disconnect">logout</a>
            <% else %>
                <a href="/twitter/connect">login via twitter</a>
            <% end %> 
        </div>
        
        <br clear="all"/>
    </div>
    
    <div class="maintext">
        <%= yield %>
    </div>
    
    <div style="margin-top:50px">
        <hr/>
        <small>
            &copy; Me.
            Powered by Rambo Blog
        </small>
    </div>
    
</body>
</html>